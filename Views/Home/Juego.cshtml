<body>
<section>
    <main class="pregunta">
        <div>
            <p>@ViewBag.PreguntaProxima.Enunciado</p>
        </div>
        @if (ViewBag.PreguntaProxima.Foto!=null){
            <div>
                <img src="@ViewBag.PreguntaProxima.Foto">
            </div>
        }
    </main>
    
    <main class="respuesta">
    <form action='@Url.Action("VerificarRespuesta")' method="post">        
        <input type="hidden" name="idPregunta" value="@ViewBag.PreguntaProxima.IdPregunta">
        @foreach (Respuesta respuesta in ViewBag.RespuestasProximas)
        {
            <button class='opcion' name="idRespuesta" value=@respuesta.IdRespuesta type="submit">@respuesta.Contenido</button>
            
        }
        
       
    </form>
</main>


    
</section>
</body>